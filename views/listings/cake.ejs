    // Function to generate HTML for each cookie listing
    function generateCookieCard(listing) {
        return `
        <div class="col listing-card">
            <div class="card">
                <img src="${listing.image}" class="card-img-top" alt="Cookie Image" style="height: 20rem;">
                <div class="card-body">
                    <b>${listing.title}</b><br>
                    &#8377;${listing.price.toFixed(2)} /- <br>
                    Category - ${listing.category} <br>
                    Flavor - ${listing.flavor}
                </div>
            </div>
        </div>
        `;
    }

    // Function to populate the gallery with cookie listings
    function populateGallery() {
        const galleryElement = document.getElementById("cookieGallery");
        let galleryHTML = "";
        allListings.forEach(listing => {
            galleryHTML += generateCookieCard(listing);
        });
        galleryElement.innerHTML = galleryHTML;
    }

    // Populate the gallery when the page loads
    window.onload = populateGallery;
